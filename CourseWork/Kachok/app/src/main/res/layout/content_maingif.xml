<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.GifActivity"
    tools:showIn="@layout/activity_maingif"
    android:background="@android:color/white"
    android:orientation="vertical">

    <WebView
        android:id="@+id/WebView2"
        android:layout_width="match_parent"
        android:layout_height="568dp" >

        <Button
            android:id="@+id/getback2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="0dp"
            android:text="@string/get_back" />
    </WebView>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="3">

        <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="1">

            <com.cunoraz.gifview.library.GifView
                android:id="@+id/gif1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="0.88"
                custom:gif="@mipmap/gif1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/button_gif_pause"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:background="@android:drawable/ic_media_pause"
            android:gravity="center_horizontal" />
        <Button
            android:id="@+id/button_gif_play"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:background="@android:drawable/ic_media_play"
            android:gravity="center_horizontal" />
        <Button
            android:id="@+id/button_gif_next"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:background="@android:drawable/ic_media_next"
            android:gravity="center_horizontal" />


    </LinearLayout>
</LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:orientation="vertical">

        <Button
            android:id="@+id/button_dialog"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="show animation" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toast"
        android:id="@+id/toast" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FRAGMENT"
        android:id="@+id/fragment"
        android:layout_gravity="center_horizontal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame">
    </FrameLayout>

</LinearLayout>

</LinearLayout>

